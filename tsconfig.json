{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "module": "nodenext",
    "outDir": "dist",
    "strict": true,
    "target": "esnext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/cli": ["./src/cli/index.js"],
      "@/cli/*": ["./src/cli/*"],
      "@/prerequisites": ["./src/prerequisites/index.js"],
      "@/prerequisites/*": ["./src/prerequisites/*"],
      "@/config": ["./src/config/index.js"],
      "@/config/*": ["./src/config/*"],
      "@/monorepo": ["./src/monorepo/index.js"],
      "@/monorepo/*": ["./src/monorepo/*"],
      "@/docker": ["./src/docker/index.js"],
      "@/docker/*": ["./src/docker/*"],
      "@/utils": ["./src/utils/index.js"],
      "@/utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["examples/**/*"],
  "ts-node": {
    "esm": true
  }
}
