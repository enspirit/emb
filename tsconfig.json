{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "module": "nodenext",
    "outDir": "dist",
    "strict": true,
    "target": "esnext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/cli": ["./src/cli/index.js"],
      "@/cli/*": ["./src/cli/*"],
      "@/git": ["./src/git/index.js"],
      "@/git/*": ["./src/git/*"],
      "@/config": ["./src/config/index.js"],
      "@/config/*": ["./src/config/*"],
      "@/monorepo": ["./src/monorepo/index.js"],
      "@/monorepo/*": ["./src/monorepo/*"],
      "@/docker": ["./src/docker/index.js"],
      "@/docker/*": ["./src/docker/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["examples/**/*"],
  "ts-node": {
    "esm": true
  }
}
