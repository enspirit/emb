{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EMB Config Schema",
  "type": "object",
  "properties": {
    "project": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 3,
          "description": "Shortcut for specifying the project name."
        },
        {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": {
              "type": "string",
              "minLength": 3,
              "description": "The name of the project."
            }
          },
          "additionalProperties": false
        }
      ]
    }
  },
  "required": ["project"],
  "additionalProperties": false
}
