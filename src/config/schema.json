{
  "$id": "/schemas/config",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EMB Config Schema",
  "type": "object",
  "properties": {
    "project": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 3,
          "description": "Shortcut for specifying the project name."
        },
        {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": {
              "type": "string",
              "minLength": 3,
              "description": "The name of the project."
            },
            "rootDir": {
              "type": "string",
              "minLength": 1,
              "description": "The root directory of the project."
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "vars": {
      "type": "object",
      "description": "Variables that will be accessible for string expansion",
      "additionalProperties": true
    },
    "defaults": {
      "$ref": "#/$defs/defaults"
    },
    "components": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/component"
      }
    },
    "flavors": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "components": {
            "type": "array",
            "items": {
              "$ref": "#/$defs/component"
            }
          },
          "defaults": {
            "$ref": "#/$defs/defaults"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["project"],
  "additionalProperties": false,

  "$defs": {
    "defaults": {
      "type": "object",
      "description": "Default settings for build aspects",
      "additionalProperties": false,
      "properties": {
        "docker": {
          "type": "object",
          "description": "Default docker build settings",
          "properties": {
            "tag": { "type": "string" },
            "target": { "type": "string" },
            "buildArgs": {
              "type": "object",
              "additionalProperties": true
            },
            "labels": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "component": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 3,
          "description": "Shortcut for specifying the component name."
        },
        {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": {
              "type": "string",
              "minLength": 3,
              "description": "The name of the component."
            },
            "context": {
              "type": "string",
              "minLength": 1,
              "description": "The directory of the component."
            },
            "description": {
              "type": "string",
              "minLength": 1,
              "description": "A description of the component."
            },
            "buildArgs": {
              "type": "object",
              "properties": {},
              "additionalProperties": true
            },
            "target": {
              "type": "string",
              "description": "The stage to target for the build"
            },
            "dockerfile": {
              "type": "string",
              "description": "The Dockerfile to use"
            }
          },
          "additionalProperties": false
        }
      ]
    }
  }
}
