{
  "$id": "/schemas/config",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EMB Config Schema",
  "type": "object",
  "properties": {
    "project": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 3,
          "description": "Shortcut for specifying the project name."
        },
        {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": {
              "type": "string",
              "minLength": 3,
              "description": "The name of the project."
            },
            "rootDir": {
              "type": "string",
              "minLength": 1,
              "description": "The root directory of the project."
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "plugins": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          },
          "config": {}
        },
        "additionalProperties": false
      }
    },
    "env": {
      "type": "object",
      "description": "Variables to install on the environment",
      "additionalProperties": {
        "type": "string"
      }
    },
    "vars": {
      "type": "object",
      "description": "Variables that will be accessible for string expansion",
      "additionalProperties": true
    },
    "defaults": {
      "$ref": "#/$defs/defaults"
    },
    "components": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/component"
      }
    },
    "flavors": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/flavor"
      }
    }
  },
  "required": ["project"],
  "additionalProperties": false,

  "$defs": {
    "defaults": {
      "type": "object",
      "description": "Default settings for build aspects",
      "additionalProperties": false,
      "properties": {
        "docker": {
          "type": "object",
          "description": "Default docker build settings",
          "properties": {
            "tag": { "type": "string" },
            "target": { "type": "string" },
            "buildArgs": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            "labels": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "task":{
      "type": "object",
      "required": ["name", "script"],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "script": {
          "type": "string"
        },
        "executor": {
          "type": "string"
        },
        "options": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "component": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 3,
          "description": "The name of the component."
        },
        "context": {
          "type": "string",
          "minLength": 1,
          "description": "The directory of the component."
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "description": "A description of the component."
        },
        "buildArgs": {
          "type": "object",
          "properties": {},
          "additionalProperties": {
            "type": "string"
          }
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "target": {
          "type": "string",
          "description": "The stage to target for the build"
        },
        "dockerfile": {
          "type": "string",
          "description": "The Dockerfile to use"
        },
        "tasks": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/task"
          }
        }
      },
      "additionalProperties": false
    },
    "flavor": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        },
        "env": {
          "type": "object",
          "description": "Variables to install on the environment",
          "additionalProperties": {
            "type": "string"
          }
        },
        "components": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/component"
          }
        },
        "defaults": {
          "$ref": "#/$defs/defaults"
        }
      },
      "additionalProperties": false
    }
  }
}
